<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/tvMyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:fontFamily="cursive"
        android:text="Khushil"
        android:textSize="25pt" />

    <TextView
        android:id="@+id/tvMyEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMyName"
        android:layout_centerHorizontal="true"
        android:text="Khushilshah2105@gmail.com" />

    <!-- tv is short form for TextView -->
    <TextView
        android:id="@+id/tvMyLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMyEmail"
        android:layout_centerHorizontal="true"
        android:text="Ahmedabad"
        android:textSize="25pt" />

</RelativeLayout>